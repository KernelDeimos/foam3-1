p({
  "class":"foam.nanos.boot.NSpec",
  "name":"localSpidGroupDomainDAO",
  "description":"Domain by spid and group",
  "authenticate": false,
  "serviceScript":
  """
    return new foam.dao.EasyDAO.Builder(x)
      .setOf(foam.nanos.auth.SpidGroupDomain.getOwnClassInfo())
      .setJournalName("spidGroupDomains")
      .setJournalType(foam.dao.JournalType.SINGLE_JOURNAL)
      .setPm(true)
      .build();
  """
})

p({
  "class":"foam.nanos.boot.NSpec",
  "name":"spidGroupDomainDAO",
  "description":"Domain by spid and group",
  "serve": true,
  "authenticate": true,
  "serviceScript":
  """
    return new foam.dao.EasyDAO.Builder(x)
      .setOf(foam.nanos.auth.SpidGroupDomain.getOwnClassInfo())
      .setInnerDAO(x.get("localSpidGroupDomainDAO"))
      .setPm(true)
      .setEnableInterfaceDecorators(false)
      .build();
  """
})
